# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4
# C-style doc comments for eclint
block_comment_start = /*
block_comment = *
block_comment_end = */

[{package.json,*.yml,package-lock.json,.all-contributorsrc,README.md}]
indent_style = space
indent_size = 2
